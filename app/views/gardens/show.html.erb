<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>'), url('https://source.unsplash.com/1200x700/?garden');">
  <% if @garden.user == current_user %>
    <%= link_to "+", garden_path(@garden), method: :delete, data: { confirm: "Are you sure?" }, class: "garden-remove-link" %>
    <%= link_to "Edit", edit_garden_path(@garden), id: "edit-link" %>
  <% end %>
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>
<div class="pt-30 container">
  <div class="cards">
    <% @garden.plants.each do |plant| %>
      <%= render "gardens/plant_card", plant: plant %>
    <% end %>
  </div>
  <% if @garden.user == current_user %>
  <div class="pt-30 row justify-content-center">
    <div class="col-12 col-md-4">
      <h4 class="text-center">Add a plant</h4>
      <%= simple_form_for [ @garden, @plant ] do |f| %>
        <%= f.input :name, placeholder: "Palm tree" %>
        <%= f.input :image_url, placeholder: "https://some_nice_image_found_on_google.jpg" %>
        <div class="form-actions">
          <%= f.submit "Add", class: "btn btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
